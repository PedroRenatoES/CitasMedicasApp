@model CitasMedicas.Models.Receta

<!DOCTYPE html>
<html lang="es">
<head>
    <meta charset="utf-8" />
    <title>Agregar Receta</title>
    <style>
        body {
            background-color: #f0f8ff; /* Fondo relacionado con el área médica */
            font-family: Arial, sans-serif;
            margin: 0;
            padding: 0;
        }

        h1 {
            text-align: center;
            color: #00796b; /* Verde oscuro */
            margin-top: 30px;
        }

        .btn {
            display: inline-block; /* Cambiar a inline-block para estar en línea con el texto */
            margin-right: 10px; /* Espacio entre el botón y el texto */
            padding: 10px 15px; /* Padding del botón */
            background-color: #00796b; /* Color de fondo */
            color: white; /* Color de texto */
            border: none; /* Sin borde */
            border-radius: 5px; /* Esquinas redondeadas */
            text-decoration: none; /* Sin subrayado */
        }

        .container {
            width: 80%;
            margin: auto;
            padding: 20px;
            background-color: #ffffff;
            box-shadow: 0 4px 8px rgba(0, 0, 0, 0.1);
            border: 1px solid #d0e2ff; /* Azul claro */
        }

        label {
            display: block;
            margin: 10px 0 5px;
        }

        input, select {
            width: 100%;
            padding: 10px;
            margin: 5px 0;
            border: 1px solid #d0e2ff; /* Azul suave */
            border-radius: 5px;
        }

        button {
            display: block;
            padding: 10px 15px;
            margin: 20px auto;
            color: white;
            background-color: #00796b; /* Verde oscuro */
            border: none;
            border-radius: 5px;
        }

            button:hover {
                background-color: #004d40; /* Verde más oscuro al pasar el cursor */
            }
    </style>
</head>
<body>
    <div class="container">
        <h1>Agregar Receta</h1>

        <form asp-action="AgregarReceta" method="post">
            <input type="hidden" asp-for="IdHistorial" value="@ViewBag.HistorialId" />
            <div>
                <label>Medicamento:</label>
                <select asp-for="IdMedicamento" asp-items="@(new SelectList(ViewBag.Medicamentos, "IdMedicamento", "Nombre"))" required>
                    <option value="">Seleccione un medicamento</option>
                </select>
            </div>
            <div>
                <label>Dosis:</label>
                <input type="text" asp-for="Dosis" required />
            </div>
            <div>
                <label>Duración:</label>
                <input type="text" asp-for="Duracion" required />
            </div>
            <input type="hidden" asp-for="FechaEmision" value="@DateTime.Now.ToString("yyyy-MM-dd")" />
            <button type="submit">Guardar Receta</button>
        </form>
    </div>
</body>
</html>
