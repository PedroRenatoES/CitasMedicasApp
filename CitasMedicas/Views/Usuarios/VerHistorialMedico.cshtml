@model IEnumerable<CitasMedicas.Models.HistorialMedico>

<!DOCTYPE html>
<html lang="es">
<head>
    <meta charset="utf-8" />
    <title>Historial Médico</title>
    <link rel="stylesheet" href="~/css/styles.css" />
    <style>
        body {
            background-color: #f0f8ff; /* Fondo claro relacionado con el área médica */
            font-family: Arial, sans-serif;
            margin: 0;
            padding: 0;
        }

        h2 {
            text-align: center;
            color: #00796b; /* Verde oscuro */
            margin-top: 30px;
        }

        table {
            width: 90%;
            margin: 20px auto;
            border-collapse: collapse;
            background-color: #ffffff;
            box-shadow: 0 4px 8px rgba(0, 0, 0, 0.1);
        }

        th, td {
            padding: 12px;
            border: 1px solid #b2dfdb; /* Bordes verdes claros */
            text-align: left;
        }

        .btn {
            display: inline-block; /* Cambiar a inline-block para estar en línea con el texto */
            margin-right: 10px; /* Espacio entre el botón y el texto */
            padding: 10px 15px; /* Padding del botón */
            background-color: #00796b; /* Color de fondo */
            color: white; /* Color de texto */
            border: none; /* Sin borde */
            border-radius: 5px; /* Esquinas redondeadas */
            text-decoration: none; /* Sin subrayado */
        }

        th {
            background-color: #004d40; /* Verde oscuro */
            color: white;
        }

        td {
            background-color: #e0f2f1; /* Fondo verde claro */
        }

        tr:nth-child(even) td {
            background-color: #f0f8ff; /* Alternar colores en las filas */
        }

        td {
            white-space: nowrap;
        }
    </style>
</head>
<body>

    <div style="text-align: left;">
        <!-- Alineación a la izquierda -->
        <a href="@Url.Action("Main", "Usuarios")" class="btn">Volver</a>
    </div>

    <h2>Historial Médico</h2>

    <table>
        <thead>
            <tr>
                <th>Fecha</th>
                <th>Descripción</th>
                <th>Diagnóstico</th>
                <th>Tratamiento</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var historial in Model)
            {
                <tr>
                    <td>@historial.Fecha?.ToString("d")</td>
                    <td>@historial.Descripcion</td>
                    <td>@historial.Diagnostico</td>
                    <td>@historial.Tratamiento</td>
                </tr>
            }
        </tbody>
    </table>
</body>
</html>
