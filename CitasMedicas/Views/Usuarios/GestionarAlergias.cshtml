@model List<CitasMedicas.Models.Alergia>

@{
    ViewData["Title"] = "Gestionar Alergias";
}

<div style="text-align: left;">
    <!-- Alineación a la izquierda -->
    <a href="@Url.Action("Main", "Usuarios")" class="btn">Volver</a>
</div>

<h2 class="form-title">Gestionar Alergias</h2>

<table class="table">
    <thead>
        <tr>
            <th>Descripción</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var alergia in Model)
        {
            <tr class="alergia-row">
                <td>@alergia.Descripcion</td>
            </tr>
        }
    </tbody>
</table>

<div class="text-center">
    <a asp-action="CrearAlergia" class="btn btn-primary">Agregar Nueva Alergia</a>
</div>

<style>
    body {
        background-color: #f0f8ff;
        font-family: Arial, sans-serif;
    }

    .form-title {
        text-align: center;
        color: #00796b;
        font-size: 2rem;
        margin-top: 20px;
    }

    .table {
        width: 80%;
        margin: 20px auto;
        border-collapse: collapse;
        border-radius: 10px;
        overflow: hidden; /* Añadir este para esquinas redondeadas */
        box-shadow: 0 4px 10px rgba(0, 0, 0, 0.2); /* Sombra para dar profundidad */
    }

        .table th {
            background-color: #00796b;
            color: #ffffff;
            padding: 10px;
            text-align: left;
        }

    .alergia-row {
        background-color: #e0f2f1; /* Color de fondo suave para las filas */
        transition: background-color 0.3s; /* Transición suave al pasar el ratón */
    }

        .alergia-row:hover {
            background-color: #b2dfdb; /* Color más oscuro al pasar el ratón */
        }

    .table td {
        padding: 10px;
        border-bottom: 1px solid #d0e2ff;
    }

    .btn {
        display: inline-block; /* Cambiar a inline-block para estar en línea con el texto */
        margin-right: 10px; /* Espacio entre el botón y el texto */
        padding: 10px 15px; /* Padding del botón */
        background-color: #00796b; /* Color de fondo */
        color: white; /* Color de texto */
        border: none; /* Sin borde */
        border-radius: 5px; /* Esquinas redondeadas */
        text-decoration: none; /* Sin subrayado */
    }

    .btn-primary {
        background-color: #00796b;
        border-color: #004d40;
        color: #ffffff;
        padding: 10px;
        border-radius: 5px;
        cursor: pointer;
    }

        .btn-primary:hover {
            background-color: #004d40;
        }
</style>
