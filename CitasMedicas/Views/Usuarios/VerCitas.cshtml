@model IEnumerable<CitasMedicas.Models.Cita>

<!DOCTYPE html>
<html lang="es">
<head>
    <meta charset="utf-8" />
    <title>Citas Programadas</title>
    <link rel="stylesheet" href="~/css/styles.css" />
    <style>
        body {
            background-color: #f0f8ff;
            font-family: Arial, sans-serif;
            margin: 0;
            padding: 0;
        }

        h2 {
            text-align: center;
            color: #00796b;
            margin-top: 30px;
        }

        table {
            width: 80%;
            margin: 20px auto;
            border-collapse: collapse;
            background-color: #ffffff;
            box-shadow: 0 4px 8px rgba(0, 0, 0, 0.1);
            border: 1px solid #d0e2ff;
        }

        .btn {
            display: inline-block;
            margin-right: 10px;
            padding: 10px 15px;
            background-color: #00796b;
            color: white;
            border: none;
            border-radius: 5px;
            text-decoration: none;
        }

        th, td {
            padding: 12px 15px;
            text-align: center;
            border: 1px solid #d0e2ff;
        }

        th {
            background-color: #004d40;
            color: #ffffff;
        }

        td {
            background-color: #e0f2f1;
        }

        tbody tr:nth-child(even) td {
            background-color: #b2dfdb;
        }

        tbody tr:hover td {
            background-color: #b2dfdb;
        }
    </style>
</head>
<body>
    <div style="text-align: left;">
        <a href="@Url.Action("Main", "Usuarios")" class="btn">Volver</a>
    </div>
    <h2>Citas Programadas</h2>

    <a href="@Url.Action("DescargarCitasPDF", "Usuarios")" class="btn">Descargar Citas en PDF</a>

    <table>
        <thead>
            <tr>
                <th>Fecha y Hora</th>
                <th>Motivo</th>
                <th>Medico</th>
                <th>Estado</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var cita in Model)
            {
                <tr>
                    <td>@cita.FechaHora?.ToString("g")</td>
                    <td>@cita.Motivo</td>
                    <td>
                        @if (cita.IdMedicoNavigation?.IdUsuarioNavigation != null)
                        {
                            @($"{cita.IdMedicoNavigation.IdUsuarioNavigation.Nombre} {cita.IdMedicoNavigation.IdUsuarioNavigation.Apellido}")
                        }
                        else
                        {
                            <span>No asignado</span>
                        }
                    </td>
                    <td>@cita.Estado</td>
                </tr>
            }
        </tbody>
    </table>
</body>
</html>

